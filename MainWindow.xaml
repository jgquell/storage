<Window x:Class="Storage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Storage"
        mc:Ignorable="d"
        Title="Storage" Height="450" Width="800">
    <Grid Background="#2d2d2d">

        <!-- Definindo as Colunas -->
        <Grid.ColumnDefinitions>
            <!-- Grid.Column="0" -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!-- Definindo as Linha -->
        <Grid.RowDefinitions>
            <!-- Gird.Row="0" -->
            <RowDefinition Height="60"/>
            <!-- Gird.Row="1" -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Linha 1: Barra Fixada -->
        <Grid
            Grid.Row="0"
            Grid.ColumnSpan="1"
            VerticalAlignment="Center"
            Background="#2d2d2d"
        >
            <!-- Logo -->
            <StackPanel
                HorizontalAlignment="Left"
                Margin="40,0,0,0"
            >
                <TextBlock
                    Text="Storage"
                    Foreground="White"
                    FontSize="20"
                />
            </StackPanel>

            <!-- Barra de Pesquisa -->
            <StackPanel
                HorizontalAlignment="Center"
            >
                <!-- Caixa de pesquisa -->
                <Border
                    Width="900"
                    Height="30"
                    Background="#474747"
                    CornerRadius="5"
                >
                    <!-- Texto para busca -->
                    <TextBox
                        Text="Pesquise aqui..."
                        Width="900"
                        Height="30"
                        Padding="4,6,0,0"
                        Background="#464646"
                        BorderBrush="#464646"
                        Foreground="White"
                    />
                </Border>

            </StackPanel>

            <!-- Icone do Usuário -->
            <StackPanel>
                <Button 
                    Content="User" 
                    HorizontalAlignment="Right"
                    Background="#2d2d2d" 
                    Height="40" 
                    Width="40" 
                    Margin="0,0,40,0" 
                    Foreground="White" 
                    BorderBrush="#2d2d2d"
                >
                </Button>
            </StackPanel>

        </Grid>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                
                <!-- Linha 2: Banners -->
                <Grid>
                    <!-- Definindo as Colunas -->
                    <Grid.ColumnDefinitions>
                        <!-- Grid.Column="0" -->
                        <ColumnDefinition Width="*"/>
                        <!-- Grid.Column="1" -->
                        <ColumnDefinition Width="*"/>
                        <!-- Grid.Column="2" -->
                        <ColumnDefinition Width="*"/>
                        <!-- Grid.Column="3" -->
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <!-- Definindo as Linhas -->
                    <Grid.RowDefinitions>
                        <!-- Grid.Row="0" -->
                        <RowDefinition Height="*"/>
                        <!-- Grid.Row="1" -->
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Banner 1 -->
                    <!-- Imagem -->
                    <StackPanel
                        Grid.RowSpan="1"
                        Grid.ColumnSpan="2"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right"
                        Margin="20,20,10,0"
                    >
                        <Border 
                            Height="614"
                            Width="900"
                        >
                            <!-- Imagem -->
                            <Image
                                Source="/images/linha2/aplicativos.png" 
                                Stretch="Fill"
                            />
                        </Border>
                    </StackPanel>
                    <!-- Texto -->
                    <StackPanel
                        Grid.RowSpan="1"
                        Grid.Column="0" 
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Left"
                        Margin="80,20,10,25"
                    >
                        <!-- Texto -->
                        <TextBlock
                            Text="Aplicativos"
                            TextAlignment="Left"
                            Foreground="White"
                            FontSize="18"
                        />
                    </StackPanel>

                    <!-- Banner 2 -->
                    <!-- Imagem -->
                    <StackPanel
                        Grid.Row="0"
                        Grid.Column="2"
                        Grid.ColumnSpan="3"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Left"
                        Margin="10,20,20,0"
                    >
                        <Border
                            Height="400"
                            Width="900"
                        >
                            <!-- Imagem -->
                            <Image 
                                Source="/images/linha2/jogos.png" 
                                Stretch="Fill"
                            />
                        </Border>
                    </StackPanel>
                    <!-- Texto -->
                    <StackPanel
                        Grid.Row="0"
                        Grid.Column="2"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        Margin="35,135,0,0"
                    >
                        <!-- Texto -->
                        <TextBlock
                            Text="Jogos"
                            TextAlignment="Left"
                            Foreground="White"
                            FontSize="18"
                        />
                    </StackPanel>

                    <!-- Banner 3 -->
                    <!-- Imagem -->
                    <StackPanel
                        Grid.RowSpan="1"
                        Grid.Column="2"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Left"
                        Margin="10,20,0,0"
                    >
                        <Border
                            Height="195"
                            Width="445"
                        >
                            <!-- Imagem -->
                            <Image
                                Source="/images/linha2/produtividade.png"
                                Stretch="Fill"
                            />
                        </Border>
                    </StackPanel>
                    <!-- Texto -->
                    <StackPanel
                        Grid.RowSpan="1"
                        Grid.Column="2"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Left"
                        Margin="35,0,0,20"
                    >
                        <!-- Texto -->
                        <TextBlock
                            Text="Produtividade"
                            TextAlignment="Left"
                            Foreground="White"
                            FontSize="15"
                        />
                    </StackPanel>

                    <!-- Banner 4 -->
                    <!-- Imagem -->
                    <StackPanel
                        Grid.RowSpan="1"
                        Grid.Column="3"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Left"
                        Margin="-7,20,0,0"
                    >
                        <Border
                            Height="195"
                            Width="442"
                        >
                            <!-- Imagem -->
                            <Image
                                Source="/images/linha2/favoritos.png" 
                                Stretch="Fill"
                            />
                        </Border>
                    </StackPanel>
                    <!-- Texto -->
                    <StackPanel
                        Grid.RowSpan="1"
                        Grid.Column="3"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Left"
                        Margin="20,0,0,20"
                    >
                        <!-- Texto -->
                        <TextBlock
                            Text="Favoritos"
                            TextAlignment="Left"
                            Foreground="White"
                            FontSize="15"
                        />
                    </StackPanel>
                </Grid>

                <!-- Linha 6: Cards de Introdução -->
                <Grid>
                    <!-- Colunas -->
                    <Grid.ColumnDefinitions>
                        <!-- Grid.Column="0" -->
                        <ColumnDefinition Width="*"/>
                        <!-- Grid.Column="1" -->
                        <ColumnDefinition Width="*"/>
                        <!-- Grid.Column="2" -->
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Card 1 -->
                    <StackPanel Grid.Column="0" Margin="40,30,0,0" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Border Width="595" Height="350" Background="#464646" CornerRadius="20">
                            <Grid>
                                <Image 
                                    Source="/images/linha6/seguranca.png" 
                                    Stretch="Fill"/>
                                <TextBlock Text="Introdução"
                                    Foreground="White"
                                    FontSize="15"
                                    VerticalAlignment="Bottom"
                                    HorizontalAlignment="Left"
                                    Margin="30,0,0,20"/>
                            </Grid>
                        </Border>
                    </StackPanel>

                    <!-- Card 2 -->
                    <StackPanel Grid.Column="1" Margin="0,30,0,0" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Border Width="595" Height="350" Background="#464646" CornerRadius="20">
                            <Grid>
                                <Image 
                                    Source="/images/linha6/entretenimento.png" 
                                    Stretch="Fill"
                                />
                                <TextBlock Text="Entretenimento"
                                    Foreground="White"
                                    FontSize="15"
                                    VerticalAlignment="Bottom"
                                    HorizontalAlignment="Left"
                                    Margin="30,0,0,20"
                                />
                            </Grid>
                        </Border>
                    </StackPanel>

                    <!-- Card 3 -->
                    <StackPanel Grid.Column="2" Margin="0,30,40,0" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Border Width="595" Height="350" Background="#464646" CornerRadius="20">
                            <Grid>
                                <Image 
                                    Source="/images/linha6/seguranca.png" 
                                    Stretch="Fill"
                                />
                                <TextBlock Text="Segurança"
                                    Foreground="White"
                                    FontSize="15"
                                    VerticalAlignment="Bottom"
                                    HorizontalAlignment="Left"
                                    Margin="30,0,0,20"
                                />
                            </Grid>
                        </Border>
                    </StackPanel>
                </Grid>

                <!-- Linha 7: Rodapé -->
                <Grid>
                    <!-- Colunas -->
                    <Grid.RowDefinitions>
                        <!-- Grid.Row="0" -->
                        <RowDefinition Height="150"/>
                    </Grid.RowDefinitions>

                    <!-- Rodapé -->
                    <StackPanel
                        Grid.Row="0"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Margin="20,0,20,0"
                    >
                        
                        <!-- Links -->
                        <TextBlock Text="Política de Privacidade   |   Termos Legais   |   Reembolsos   |   Cookies"
                            TextAlignment="Center"
                            Foreground="White"
                            FontSize="14"
                            TextWrapping="Wrap"
                            Margin="0,0,0,10"
                        />

                        <!-- Direitos autorais -->
                        <TextBlock Text="©2025 Storage. Todos os direitos reservados. Todas as marcas são propriedade dos seus respectivos donos em outros países."
                            TextAlignment="Center"
                            Foreground="White"
                            FontSize="12"
                            TextWrapping="Wrap"
                        />
                    </StackPanel>
                </Grid>

            </StackPanel>
        </ScrollViewer>
        
    </Grid>
</Window>